{
    "root": true,

    "env": {
        "browser": true,
        "es2020": true,
        "node": true
    },
    "globals": {
        "Vue": true,
        "Pjax": true,
        "onloadCSS": true,
        "loadCSS": true
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
        "@babel"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1,
                "ignoredNodes": [
                    "TemplateLiteral"
                ]
            }
        ],
        "no-multi-spaces": "warn",
        "eqeqeq": "warn",
        "curly": "warn",
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "eol-last": [
            "warn",
            "always"
        ],
        "comma-dangle": [
            "warn",
            {
                "arrays": "never",
                "objects": "never",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "brace-style": [
            "warn",
            "1tbs"
        ]
    }
}
